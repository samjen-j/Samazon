@{
}

@model BooksViewModel

<h1>Books</h1>

@foreach (Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">By: @b.Author <br /> @b.Publisher <br /> ISBN: @b.Isbn <br /> @b.Classification <br /> @b.Category <br /> @b.PageCount pages </div>
    </div>
    <br />
}


<div page-next="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
